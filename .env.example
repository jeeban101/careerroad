# CareerRoad Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
# Get this from your Supabase project dashboard
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres

# AI Service Configuration (Required)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Session Security (Required)
# Generate a random secure string for session encryption
SESSION_SECRET=your_secure_random_string_here

# PostgreSQL Connection Details (Auto-provided by Supabase)
PGHOST=db.xxxxx.supabase.co
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_database_password
PGDATABASE=postgres

# Development Environment (Optional)
NODE_ENV=development

# Frontend Environment Variables (Optional)
# These are automatically handled by Vite
VITE_API_URL=http://localhost:5000